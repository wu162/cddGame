<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="20"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/tubiao"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.activity.implementation.MenuActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
        </activity>
        <activity
            android:name="com.example.activity.implementation.GameActivity"
            android:label="@string/title_activity_game" 
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.activity.implementation.HelpActivity"
            android:label="@string/title_activity_help"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.activity.implementation.AboutActivity"
            android:label="@string/title_activity_about"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>